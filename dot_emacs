(require 'package) 
(add-to-list 'package-archives
             '("melpa" . "http://melpa.org/packages/") t)
(when (< emacs-major-version 24)
  (add-to-list 'package-archives '("gnu" . "http://elpa.gnu.org/packages/")))
(package-initialize)


(prefer-coding-system 'utf-8-unix)

(require 'saveplace)
(setq-default save-place t)

(global-set-key (kbd "M-/") 'hippie-expand)
(global-set-key (kbd "C-x C-b") 'ibuffer)

(when (fboundp 'windmove-default-keybindings)
  (windmove-default-keybindings))

;;(nyan-mode 1)

(setq magit-last-seen-setup-instructions "1.4.0")

(require 'recentf)
(setq recentf-auto-cleanup 'never)
(recentf-mode 1)
(global-set-key "\C-xf" 'recentf-open-files)

(desktop-save-mode 1)

(require 'evil)
(evil-mode 1)

(require 'helm-config)
(helm-mode 1)

(require 'smartparens)
(smartparens-mode 1)
(setq tramp-default-method "scp")


(require 'powerline)
(powerline-default-theme)

(require 'auto-complete-config)
(add-to-list 'ac-dictionary-directories "~/.emacs.d/ac-dict")
(ac-config-default)

(setenv "PATH" (concat (getenv "PATH") ":/usr/local/bin"))
(setq exec-path (append exec-path '("/usr/local/bin")))

(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(ansi-color-names-vector
   ["#242424" "#e5786d" "#95e454" "#cae682" "#8ac6f2" "#333366" "#ccaa8f" "#f6f3e8"])
 '(cua-mode t nil (cua-base))
 '(custom-enabled-themes (quote (grandshell)))
 '(custom-safe-themes
   (quote
    ("f0d8af755039aa25cd0792ace9002ba885fd14ac8e8807388ab00ec84c9497d7" default)))
 '(golden-ratio-mode t)
 '(inhibit-startup-screen t)
 '(package-selected-packages
   (quote
    (grandshell-theme auto-complete w3m magit powerline smartparens pomodoro nyan-mode helm golden-ratio go-mode evil)))
 '(show-paren-mode t)
 '(tool-bar-mode nil))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 )
 
