 '(custom-enabled-themes (quote (sanityinc-solarized-dark)))
 '(custom-safe-themes
   (quote
    ("4aee8551b53a43a883cb0b7f3255d6859d766b6c5e14bcb01bed572fcbef4328" "f0d8af755039aa25cd0792ace9002ba885fd14ac8e8807388ab00ec84c9497d7" default)))
 '(golden-ratio-mode t)
 '(inhibit-startup-screen t)
 '(package-selected-packages
   (quote
    (company color-theme-sanityinc-solarized grandshell-theme auto-complete w3m powerline smartparens nyan-mode helm golden-ratio evil)))
 '(show-paren-mode t)
 '(tool-bar-mode nil))
(custom-set-faces
